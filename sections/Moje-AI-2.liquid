{%- style -%}

  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: #ffffff;
    font-family: 'Inter', sans-serif;
    position: relative;
    overflow: hidden; 
    padding: 6rem 0;
  }

  /* UTILITY & LAYOUT */
  .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 2;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.85rem;
  }
  @media (min-width: 768px) {
    .features-grid {
      gap: 2rem;
    }
  }

  /* TYPOGRAPHY */
  #shopify-section-{{ section.id }} h2 {
    font-family: 'Orbitron', sans-serif !important;
    font-size: 2.5rem !important;
    font-weight: bold;
    letter-spacing: -0.05em !important; 
    text-align: center;
    margin-bottom: 1rem;
    color: white;
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} h2 { font-size: 3.5rem !important; }
  }

  .section-subtitle {
    text-align: center;
    color: #9ca3af;
    font-size: 1.125rem;
    max-width: 42rem;
    margin: 0 auto 4rem auto;
  }

  /* GLASS CARD STYLES */
  .feature-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    border-top: 2px solid transparent;
  }

  .feature-card:hover {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.05);
  }

  .icon-wrapper {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
    border: 1px solid rgba(255,255,255,0.1);
  }
  
  .feature-card:hover .icon-wrapper {
    transform: scale(1.1);
  }

  .material-symbols-outlined {
    font-family: 'Material Symbols Outlined' !important; 
    font-weight: normal; 
    font-style: normal; 
    font-size: 24px; 
    line-height: 1; 
    display: inline-block; 
    white-space: nowrap;
  }
  
  .icon-main { font-size: 2rem !important; }
  
  .icon-bg {
    position: absolute;
    top: 0;
    right: 0;
    padding: 1rem;
    opacity: 0.05;
    transition: opacity 0.4s;
    pointer-events: none;
  }
  .icon-bg span { font-size: 5rem !important; }
  
  .feature-card:hover .icon-bg { opacity: 0.15; }

  .card-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
    color: white;
  }

  .card-desc {
    color: #9ca3af;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Desktop: klasický grid – na mobilu skrytý */
  @media (max-width: 769px) {
    .features-grid { display: none !important; }
  }

  /* ========== MOBIL (< 770px): jedna karta v rozměru jako na PC, přepínání + progress ========== */
  .features-mobile-scroll-wrap {
    display: none;
    position: relative;
    margin: 0 -1.5rem;
  }
  @media (max-width: 769px) {
    .features-mobile-scroll-wrap {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: stretch;
      gap: 0.75rem;
      min-height: 240px;
      overflow: visible;
      padding: 0 1.5rem 0 1.5rem;
      box-sizing: border-box;
    }
  }

  /* Stage = šířka jedné PC karty (stejný výpočet jako grid: (1200 - 3rem - 2*2rem) / 3) */
  .features-mobile-scroll {
    overflow: hidden;
    border-radius: 1rem;
    flex: 0 1 auto;
    max-width: calc((1200px - 3rem - 4rem) / 3);
    width: 100%;
    min-width: 0;
    height: auto;
    min-height: 240px;
    position: relative;
    touch-action: pan-y;
  }
  @media (max-width: 769px) and (max-height: 500px) {
    .features-mobile-scroll { min-height: 200px; }
  }

  /* Karty – rozměrově i designem identické s .feature-card */
  .feature-card-mobile {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    box-sizing: border-box;
    transition: transform 0.4s ease, opacity 0.4s ease;
    opacity: 0;
    transform: translateY(24px);
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }
  .feature-card-mobile.is-active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
    z-index: 2;
  }
  .feature-card-mobile.is-exit {
    transform: translateY(-28px);
    opacity: 0;
    z-index: 1;
    pointer-events: none;
  }
  .feature-card-mobile.is-enter-from {
    transform: translateY(28px);
    opacity: 0;
    z-index: 1;
    pointer-events: none;
  }
  .feature-card-mobile.is-enter-from.is-enter {
    transform: translateY(0);
    opacity: 1;
  }
  .feature-card-mobile .icon-bg {
    position: absolute;
    top: 0;
    right: 0;
    padding: 1rem;
    opacity: 0.05;
  }
  .feature-card-mobile .icon-bg span { font-size: 5rem !important; }
  .feature-card-mobile .icon-wrapper {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255,255,255,0.1);
  }
  .feature-card-mobile .card-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
    color: white;
  }
  .feature-card-mobile .card-desc {
    display: block !important;
    color: #9ca3af;
    font-size: 0.95rem;
    line-height: 1.6;
    flex: 1;
  }

  /* Pravá lišta = tenký progress (oranž → fialová → světle modrá), pulsující záře, hvězda na konci */
  #shopify-section-{{ section.id }} .features-progress-wrap {
    display: none;
    flex: 0 0 auto;
    width: 14px;
    position: relative;
    z-index: 20;
    pointer-events: none;
    align-self: stretch;
  }
  @media (max-width: 769px) {
    #shopify-section-{{ section.id }} .features-progress-wrap {
      display: flex !important;
      flex-direction: column;
      align-items: center;
      visibility: visible !important;
      opacity: 1 !important;
    }
  }
  #shopify-section-{{ section.id }} .features-progress-track {
    display: block !important;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    background: rgba(255, 255, 255, 0.06);
    border-radius: 2px;
  }
  #shopify-section-{{ section.id }} .features-progress-fill {
    display: block !important;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    height: 33.33%;
    border-radius: 2px;
    transition: height 0.4s ease;
    /* barva se nastavuje z JS podle barev karet */
    background: var(--progress-fill-gradient, linear-gradient(to top, #06b6d4, #d946ef, #f97316));
    box-shadow: 0 0 10px var(--progress-glow, rgba(249, 115, 22, 0.4));
    animation: progress-glow-pulse 1.8s ease-in-out infinite;
  }
  #shopify-section-{{ section.id }} .features-progress-fill::before {
    content: '';
    position: absolute;
    inset: -8px -6px;
    border-radius: 8px;
    background: inherit;
    filter: blur(10px);
    opacity: 0.5;
    z-index: -1;
    pointer-events: none;
  }
  @keyframes progress-glow-pulse {
    0%, 100% { opacity: 0.92; filter: brightness(1); box-shadow: 0 0 8px var(--progress-glow, rgba(249, 115, 22, 0.35)); }
    50% { opacity: 1; filter: brightness(1.12); box-shadow: 0 0 18px var(--progress-glow, rgba(249, 115, 22, 0.55)); }
  }
  #shopify-section-{{ section.id }} .features-progress-cap {
    position: absolute;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background 0.4s ease, box-shadow 0.4s ease;
    z-index: 2;
    pointer-events: none;
  }
  #shopify-section-{{ section.id }} .features-progress-cap .progress-cap-icon {
    font-size: 14px !important;
    color: rgba(255, 255, 255, 0.95);
    filter: drop-shadow(0 0 4px currentColor);
  }
  #shopify-section-{{ section.id }} .features-progress-cap {
    animation: progress-cap-pulse 1.8s ease-in-out infinite;
  }
  #shopify-section-{{ section.id }} .features-progress-cap.cap-custom {
    /* barva z JS podle aktuální karty */
  }
  @keyframes progress-cap-pulse {
    0%, 100% { opacity: 1; filter: brightness(1); }
    50% { opacity: 0.9; filter: brightness(1.2); }
  }

  .orbit-line {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(124, 58, 237, 0.3), transparent);
    z-index: 1;
    pointer-events: none;
  }

  /* --- TLAČÍTKO --- */
  .cta-wrapper {
    margin-top: 16rem;
    text-align: center;
    display: flex;
    justify-content: center;
    perspective: 1000px;
    padding-bottom: 8rem;
    position: relative;
    z-index: 10;
  }

  @keyframes float-animation {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0px); }
  }

  .cyber-pill-button {
    position: relative;
    display: inline-flex;
    gap: 10px;
    align-items: center;
    justify-content: center;
    padding: 13px 50px;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 13px; /* Sladěno s první sekcí */
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #fff;
    text-decoration: none;
    
    /* Crystal Style barvy z Moje-laser-video */
    background: linear-gradient(90deg, rgb(235, 37, 192), rgba(68, 6, 212, 0.93)) !important;
    box-shadow: 0 0 25px rgba(114, 43, 238, 0.9), inset 0 0 10px rgba(208, 183, 255, 0.7) !important;
    
    border-radius: 8px;
    transition: all 0.5s ease;
    cursor: pointer;
    border: none;
    outline: none;
    animation: float-animation 3s ease-in-out infinite;
    overflow: hidden; 
  }

  /* Hover efekt - Shine (Lesk) */
  .cyber-pill-button::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: 0.5s;
    z-index: 1;
  }

  .cyber-pill-button:hover::after {
    left: 100%;
  }

  .cyber-pill-button .material-symbols-outlined.arrow-icon {
      transition: transform 0.3s ease;
      position: relative;
      z-index: 2;
      font-size: 24px !important; /* Standartní velikost pro ikonu */
  }

  /* HOVER STAVY */
  .cyber-pill-button:hover {
    box-shadow: 0 0 30px rgba(205, 6, 212, 0.4) !important;
    transform: translateY(-2px); /* Jemný hover posun z Moje-laser-video */
    animation-play-state: paused; /* Zůstane stát v levitaci */
  }

  .cyber-pill-button:hover .arrow-icon {
    transform: translateX(5px); /* Posun šipky doprava */
  }

  /* Disabled stav */
  .cyber-pill-button.btn-disabled {
      pointer-events: none !important; 
      animation: none !important;
      background: #222 !important;
      box-shadow: none !important;
      color: #555 !important;
  }

  /* Ostatní styly (Mist, Shadows) */
  .purple-mist {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 200px;
      background: linear-gradient(to top, rgba(217, 70, 239, 0.6), rgba(217, 70, 239, 0.1), transparent);
      filter: blur(40px);
      pointer-events: none;
      z-index: 1;
      opacity: 0.6;
      animation: mist-flicker 4s infinite alternate ease-in-out;
      transition: background 1.5s ease;
      display: block !important;
  }

  @keyframes mist-flicker {
      0% { opacity: 0.4; transform: scaleY(0.9); filter: blur(30px); }
      50% { opacity: 0.7; filter: blur(45px); }
      100% { opacity: 0.5; transform: scaleY(1.1); filter: blur(35px); }
  }

  .desktop-top-shadow {
      display: none;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 150px;
      background: linear-gradient(to bottom, #000101, transparent);
      pointer-events: none;
      z-index: 1;
      display: block !important;
  }

  @media (min-width: 768px) {
      .desktop-top-shadow { display: block; }
  }

{%- endstyle -%}

<div style="position: absolute; inset: 0; z-index: 0; pointer-events: none;">
    {% if section.settings.bg_image != blank %}
        {%- assign bg_style = 'width: 100%; height: 100%; object-fit: cover; opacity: 0.4; object-position: ' | append: section.settings.bg_position -%}
        {{ section.settings.bg_image | image_url: width: 2000 | image_tag: class: 'object-cover', style: bg_style, loading: 'lazy' }}
        <div style="position: absolute; inset: 0; background: rgba(5, 5, 5, 0.7);"></div>
    {% endif %}
</div>

<div class="orbit-line"></div>
<div id="neon-mist-layer" class="purple-mist"></div>
<div class="desktop-top-shadow"></div>

<div class="features-container">
  <div style="position: relative; z-index: 2;">
    <h2>{{ section.settings.title }}</h2>
    <p class="section-subtitle">{{ section.settings.subtitle }}</p>
  </div>

  <div class="features-grid">
    {%- for block in section.blocks -%}
      <div class="feature-card" style="border-top-color: {{ block.settings.color }};">
        <div class="icon-bg">
          <span class="material-symbols-outlined" style="color: {{ block.settings.color }};">{{ block.settings.icon }}</span>
        </div>
        <div class="icon-wrapper" style="background-color: {{ block.settings.color }}1A; border-color: {{ block.settings.color }}4D;">
          <span class="material-symbols-outlined icon-main" style="color: {{ block.settings.color }};">{{ block.settings.icon }}</span>
        </div>
        <h3 class="card-title">{{ block.settings.title }}</h3>
        <p class="card-desc">{{ block.settings.text }}</p>
      </div>
    {%- endfor -%}
  </div>

  <!-- Mobil (< 770px): jedna karta na výšku, scroll mezi kartami, progress lišta vpravo -->
  <div class="features-mobile-scroll-wrap" id="features-mobile-wrap-{{ section.id }}">
    <div class="features-mobile-scroll" id="features-mobile-scroll-{{ section.id }}" role="region" aria-label="Karty s informacemi">
      {%- for block in section.blocks -%}
        <div class="feature-card-mobile{% if forloop.first %} is-active{% endif %}" style="border-top: 2px solid {{ block.settings.color }};" data-card-index="{{ forloop.index0 }}" data-color="{{ block.settings.color }}">
          <div class="icon-bg">
            <span class="material-symbols-outlined" style="color: {{ block.settings.color }};">{{ block.settings.icon }}</span>
          </div>
          <div class="icon-wrapper" style="background-color: {{ block.settings.color }}1A; border-color: {{ block.settings.color }}4D;">
            <span class="material-symbols-outlined icon-main" style="color: {{ block.settings.color }};">{{ block.settings.icon }}</span>
          </div>
          <h3 class="card-title">{{ block.settings.title }}</h3>
          <p class="card-desc">{{ block.settings.text }}</p>
        </div>
      {%- endfor -%}
    </div>
    <div class="features-progress-wrap" id="features-progress-wrap-{{ section.id }}" aria-hidden="true">
      <div class="features-progress-track"></div>
      <div class="features-progress-fill" id="features-progress-fill-{{ section.id }}"></div>
      <div class="features-progress-cap cap-custom" id="features-progress-cap-{{ section.id }}" style="top: 33.33%;">
        <span class="material-symbols-outlined progress-cap-icon">star</span>
      </div>
    </div>
  </div>

  <div class="cta-wrapper">
    <button type="button" id="trigger-cosmic-intro" class="cyber-pill-button">
      {{ section.settings.btn_text }}
      <span class="material-symbols-outlined arrow-icon">keyboard_double_arrow_down</span>
    </button>
  </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const triggerBtn = document.getElementById('trigger-cosmic-intro');
        const currentSectionDiv = document.getElementById('shopify-section-{{ section.id }}');
        const mistLayer = document.getElementById('neon-mist-layer');

        /* Mobil: 1 karta, scroll KDEKOLIV přepíná karty (dokud sekce v viewportu); progress bar z barev karet */
        (function() {
            var sectionEl = document.getElementById('shopify-section-{{ section.id }}');
            var wrap = document.getElementById('features-mobile-wrap-{{ section.id }}');
            var stage = document.getElementById('features-mobile-scroll-{{ section.id }}');
            var progressFill = document.getElementById('features-progress-fill-{{ section.id }}');
            var progressCap = document.getElementById('features-progress-cap-{{ section.id }}');
            if (!wrap || !stage || !sectionEl) return;
            var cards = stage.querySelectorAll('.feature-card-mobile');
            var total = cards.length;
            if (total === 0) return;
            var currentIndex = 0;
            var animating = false;
            var duration = 400;
            var cardColors = [];
            for (var i = 0; i < cards.length; i++) {
                var c = cards[i].getAttribute('data-color');
                if (c) cardColors.push(c);
            }
            if (cardColors.length === 0) cardColors = ['#f97316', '#d946ef', '#06b6d4'];

            var STEPS_PER_CARD = 5;
            var totalSteps = total * STEPS_PER_CARD;
            var currentStep = 0;

            var PROGRESS_PURPLE = { r: 217, g: 70, b: 239 };
            var PROGRESS_BLUE = { r: 6, g: 182, b: 212 };
            var PROGRESS_GRADIENT = 'linear-gradient(to bottom, #d946ef 0%, #a78bfa 35%, #38bdf8 65%, #06b6d4 100%)';

            function hexToRgba(hex, a) {
                hex = String(hex).replace('#', '');
                var r = parseInt(hex.substr(0, 2), 16), g = parseInt(hex.substr(2, 2), 16), b = parseInt(hex.substr(4, 2), 16);
                return 'rgba(' + r + ',' + g + ',' + b + ',' + (a !== undefined ? a : 1) + ')';
            }
            function setProgressFromStep(step) {
                var pct = totalSteps > 0 ? ((step + 1) / totalSteps) * 100 : 0;
                var cardIndex = Math.floor(step / STEPS_PER_CARD);
                var capColor = cardColors[cardIndex] || '#d946ef';
                if (progressFill) {
                    progressFill.style.height = pct + '%';
                    progressFill.style.setProperty('--progress-fill-gradient', PROGRESS_GRADIENT);
                    progressFill.style.setProperty('--progress-glow', hexToRgba(capColor, 0.5));
                }
                if (progressCap) {
                    progressCap.style.top = pct + '%';
                    progressCap.style.background = capColor;
                    progressCap.style.boxShadow = '0 0 14px ' + hexToRgba(capColor, 0.75) + ', 0 0 8px ' + hexToRgba(capColor, 0.5);
                }
            }
            function goToSlide(nextIndex, skipProgress) {
                if (animating || nextIndex < 0 || nextIndex >= total) return;
                if (nextIndex === currentIndex) return;
                animating = true;
                var currentCard = cards[currentIndex];
                var nextCard = cards[nextIndex];
                currentCard.classList.remove('is-active');
                currentCard.classList.add('is-exit');
                nextCard.classList.add('is-enter-from');
                nextCard.offsetHeight;
                nextCard.classList.add('is-enter');
                if (!skipProgress) setProgressFromStep((nextIndex + 1) * STEPS_PER_CARD - 1);
                setTimeout(function() {
                    currentCard.classList.remove('is-exit');
                    nextCard.classList.remove('is-enter-from', 'is-enter');
                    nextCard.classList.add('is-active');
                    currentIndex = nextIndex;
                    animating = false;
                }, duration);
            }
            function stepForward() {
                if (currentStep >= totalSteps - 1) return false;
                currentStep++;
                setProgressFromStep(currentStep);
                var newCardIndex = Math.floor(currentStep / STEPS_PER_CARD);
                if (newCardIndex !== currentIndex) goToSlide(newCardIndex, true);
                return true;
            }
            function stepBack() {
                if (currentStep <= 0) return false;
                currentStep--;
                setProgressFromStep(currentStep);
                var newCardIndex = Math.floor(currentStep / STEPS_PER_CARD);
                if (newCardIndex !== currentIndex) goToSlide(newCardIndex, true);
                return true;
            }

            cards[0].classList.add('is-active');
            setProgressFromStep(0);

            function isCenterOverCards() {
                if (window.innerWidth > 769) return false;
                var r = wrap.getBoundingClientRect();
                var centerY = window.innerHeight * 0.5;
                return r.top <= centerY && centerY <= r.bottom;
            }
            function handleWheel(e) {
                if (!isCenterOverCards()) return;
                var dy = e.deltaY;
                if (dy > 12) {
                    if (stepForward()) e.preventDefault();
                } else if (dy < -12) {
                    if (stepBack()) e.preventDefault();
                }
            }
            document.addEventListener('wheel', handleWheel, { passive: false });

            var touchStartY = 0;
            function handleTouchStart(e) {
                if (window.innerWidth > 769) return;
                touchStartY = e.touches[0].clientY;
            }
            function handleTouchEnd(e) {
                if (window.innerWidth > 769 || !e.changedTouches[0]) return;
                if (!isCenterOverCards()) return;
                var dy = e.changedTouches[0].clientY - touchStartY;
                if (dy < -35) stepForward();
                else if (dy > 35) stepBack();
            }
            document.addEventListener('touchstart', handleTouchStart, { passive: true });
            document.addEventListener('touchend', handleTouchEnd, { passive: true });
        })();
        
        const allSections = Array.from(document.querySelectorAll('.shopify-section'));
        const footer = document.querySelector('footer') || document.getElementById('shopify-section-footer') || document.querySelector('.site-footer');

        let elementsToHide = [];
        let isAfterCurrent = false;

        document.addEventListener('changeMistColor', function(e) {
            if (!mistLayer) return;
            const newColor = e.detail.color; 
            let newGradient = '';
            if (newColor === 'orange') {
                newGradient = 'linear-gradient(to top, rgba(249, 115, 22, 0.6), rgba(249, 115, 22, 0.1), transparent)';
            } else if (newColor === 'purple') {
                newGradient = 'linear-gradient(to top, rgba(217, 70, 239, 0.6), rgba(217, 70, 239, 0.1), transparent)';
            } else {
                newGradient = 'linear-gradient(to top, rgba(88, 230, 255, 0.6), rgba(92, 230, 255, 0.1), transparent)';
            }
            mistLayer.style.background = newGradient;
        });

        allSections.forEach(sec => {
            if (sec === currentSectionDiv) {
                isAfterCurrent = true;
            } else if (isAfterCurrent) {
                sec.style.display = 'none';
                elementsToHide.push(sec);
            }
        });

        if (footer && footer.style.display !== 'none' && !elementsToHide.includes(footer)) {
            footer.style.display = 'none';
            elementsToHide.push(footer);
        }

        if(triggerBtn){
            triggerBtn.addEventListener('click', function(e) {
                e.preventDefault();
                if (this.classList.contains('btn-disabled')) return;
                this.classList.add('btn-disabled');
                this.blur();
                elementsToHide.forEach(el => { el.style.display = ''; });
                const event = new CustomEvent('triggerCosmicIntro');
                document.dispatchEvent(event);
                const videoTarget = document.querySelector('.cosmic-wrapper');
                if(videoTarget) {
                    setTimeout(() => {
                        videoTarget.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }, 100);
                }
            });
        }
    });
