<script>
  document.addEventListener("DOMContentLoaded", function() {
    // 1. Zjistíme šířku obrazovky
    const isMobile = window.innerWidth < 750;
    const targetDevice = isMobile ? 'mobile' : 'desktop';

    // 2. Najdeme všechna videa a hlavičku
    const smartVideos = document.querySelectorAll('.js-smart-video');
    const headerElement = document.querySelector('header');
    
    smartVideos.forEach(video => {
      // 3. Zjistíme, pro jaké zařízení video je
      const videoDevice = video.getAttribute('data-device');
      const videoSrc = video.getAttribute('data-src');

      // 4. Pokud se zařízení shoduje, načteme video
      if (videoDevice === targetDevice && videoSrc) {
        
        video.src = videoSrc;
        video.loop = true;
        
        const showVideo = () => {
          video.play().then(() => {
            // A) Zobrazíme video (logo)
            video.style.opacity = '1';
            
             // Skryjeme podkladový obrázek
             const wrapper = video.closest('.header__heading-logo-wrapper');
             if (wrapper) {
                 const imageUnder = wrapper.querySelector('.js-image-logo-under');
                 if (imageUnder) imageUnder.style.opacity = '0';
             }

             // B) ZPOŽDĚNÉ NAČTENÍ MENU A TEXTU
             // Zde nastavte čas v milisekundách (např. 2000 = 2 sekundy zpoždění po startu videa)
             setTimeout(() => {
                 if (headerElement) {
                     headerElement.classList.add('content-loaded');
                 }
             }, 3000); 

          }).catch(err => {
            console.log("Autoplay blocked/failed", err);
            // Pojistka: Pokud video selže (např. úsporný režim mobilu), zobrazíme menu ihned
            if (headerElement) headerElement.classList.add('content-loaded');
          });
        };

        if (video.readyState >= 3) { 
          showVideo();
        } else {
          video.addEventListener('loadeddata', showVideo, { once: true });
          video.addEventListener('canplay', showVideo, { once: true });
        }
      }
    });
    
    // Pojistka pro případ, že na stránce žádné video není nebo se nenačte do 6 sekund
    setTimeout(() => {
        if (headerElement && !headerElement.classList.contains('content-loaded')) {
            headerElement.classList.add('content-loaded');
        }
    }, 6000);
  });
</script>

