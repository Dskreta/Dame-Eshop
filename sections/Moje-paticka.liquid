  function applyFooterAccent(colorKey) {
    var c = footerColors[colorKey] || footerColors.purple;
    var section = document.getElementById('shopify-section-{{ section.id }}');
    if (section) {
      section.style.setProperty('--footer-accent', c.hex);
      section.style.setProperty('--footer-accent-rgb', c.rgb);
