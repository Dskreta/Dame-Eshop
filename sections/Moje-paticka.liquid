{%- style -%}
  /* Barvy podle vybrané cenové nabídky (Moje-cenovka-2) – výchozí fialová */
  #shopify-section-{{ section.id }} {
      --footer-accent: #d946ef;
      --footer-accent-rgb: 217, 70, 239;
  }
  /* --- 1. ZÁKLADNÍ NASTAVENÍ SEKCE --- */
  #shopify-section-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
      color: white;
      position: relative;
      z-index: 10;
      /* Důležité: overflow musí být visible, aby záře mohla jít mimo sekci, pokud je na kraji, 
         ale pro jistotu necháme hidden jen pro celou sekci, aby nerozbila šířku stránky. */
      overflow: hidden; 
      border-top: 1px solid rgba(255,255,255,0.05);
  }

  .footer-wrapper-{{ section.id }} {
      display: flex;
      flex-direction: column;
      gap: 4rem;
      max-width: 1300px;
      margin: 0 auto;
      padding: 4rem 1.5rem;
      position: relative;
      z-index: 10;
      align-items: center;
  }

  @media (min-width: 990px) {
      .footer-wrapper-{{ section.id }} {
          flex-direction: row;
          justify-content: space-between;
          gap: 10rem;
          padding: 6rem 2rem;
      }
      /* Perspective musí být zde pro 3D efekt */
      .footer-left-{{ section.id }} { 
          width: 45%; 
          display: flex; 
          justify-content: center; 
          perspective: 1500px; 
          z-index: 20; 
      }
      .footer-right-{{ section.id }} { width: 50%; }
  }

  /* --- 2. 3D KARTA --- */
  .card-root-{{ section.id }} {
      position: relative;
      width: 320px;
      height: 450px;
      transform-style: preserve-3d;
      transform: rotateX(0deg) rotateY(0deg);
      transition: transform 0.1s ease-out;
      will-change: transform;
      cursor: pointer;
  }

  /* Reset animace */
  .card-root-{{ section.id }}.is-resetting {
      transition: transform 0.5s ease-out;
      transform: rotateX(0deg) rotateY(0deg) !important;
      display: block !important;
  }

  /* --- 3. ZADNÍ ZÁŘE (GLOW BEHIND) – barva podle cenovky --- */
  .card-back-glow-{{ section.id }} {
      position: absolute;
      top: -40px; left: -40px; right: -40px; bottom: -40px; /* Větší než karta */
      border-radius: 50%;
      background: radial-gradient(
          circle at var(--mouse-x, 50%) var(--mouse-y, 50%), 
          rgba(var(--footer-accent-rgb, 217, 70, 239), 0.6), 
          transparent 50%
      );
      opacity: 0;
      transform: translateZ(-50px); /* Posunuto DOZADU za kartu */
      filter: blur(30px); /* Rozmazání pro efekt světla */
      transition: opacity 0.3s ease;
      pointer-events: none;
      z-index: -1;
      display: block !important;
  }

  @media (min-width: 750px) {
    .card-root-{{ section.id }}:hover .card-back-glow-{{ section.id }} {
        opacity: 1;
    }
  }
  /* Na mobilu: stín za kartou viditelný, když je karta ve viewportu (třídu přidá JS) */
  @media (max-width: 749px) {
    .card-root-{{ section.id }}.card-glow-visible .card-back-glow-{{ section.id }} {
        opacity: 1;
    }
  }

  /* --- 4. HLAVNÍ PLOCHA KARTY (OBRÁZEK) --- */
  .card-face-{{ section.id }} {
      position: absolute;
      inset: 0;
      background-color: #1a1a1a;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      border-radius: 20px;
      /* Stín karty samotné */
      box-shadow: 0 0 0 1px rgba(255,255,255,0.1), 0 20px 40px rgba(0,0,0,0.8);
      overflow: hidden;
      transform: translateZ(0px); /* Základní rovina */
      display: flex;
      flex-direction: column;
      justify-content: flex-end; /* Text dole */
  }

  /* Přechod přes obrázek, aby byl text čitelný */
  .card-overlay-gradient {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.95) 10%, rgba(0,0,0,0.5) 40%, transparent 100%);
      z-index: 1;
      display: block !important;
  }

  /* Odlesk na povrchu (Surface Shine) */
  .card-surface-shine-{{ section.id }} {
      position: absolute;
      inset: 0;
      background: radial-gradient(
          800px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), 
          rgba(255, 255, 255, 0.15), 
          transparent 40%
      );
      z-index: 2;
      opacity: 0;
      transition: opacity 0.3s;
      mix-blend-mode: overlay;
      display: block !important;
  }
  @media (min-width: 750px) {
    .card-root-{{ section.id }}:hover .card-surface-shine-{{ section.id }} {
        opacity: 1;
    }
  }

  /* --- 5. OBSAH KARTY (TEXT) --- */
  .card-content-{{ section.id }} {
      position: relative;
      z-index: 10;
      padding: 2rem;
      transform: translateZ(20px); /* Text vystupuje z karty */
      text-align: center;
  }

  /* --- 6. OSTATNÍ STYLY --- */
  .text-content-{{ section.id }} {
      text-align: left;
      padding-left: 1rem;
      border-left: 1px solid rgba(255,255,255,0.1);
  }
  .font-display { font-family: 'Orbitron', sans-serif; }
  .font-tech { font-family: 'Rajdhani', sans-serif; }
  
  .hover-glow-text { transition: all 0.3s ease; }
  /* Barvy vázané na cenovou nabídku (Moje-cenovka-2) */
  .footer-subtitle-color { color: var(--footer-accent) !important; }
  /* Nadpis: výchozí bílý, bez zabarvení; zabarvení jen při hoveru na desktopu */
  .footer-main-title-gradient {
      color: #fff !important;
      background: none !important;
      -webkit-background-clip: unset !important;
      background-clip: unset !important;
      filter: none;
  }
  .footer-card-subtitle-color { color: var(--footer-accent) !important; }
  .footer-card-line { background-color: var(--footer-accent) !important; }

  /* Všechny hover efekty pouze pro desktop (min-width: 750px), na mobilu nic */
  @media (min-width: 750px) {
    .hover-glow-text:hover {
        background: linear-gradient(to right, white, var(--footer-accent), white) !important;
        -webkit-background-clip: text !important;
        background-clip: text !important;
        color: transparent !important;
        text-shadow: 0 0 18px rgba(var(--footer-accent-rgb, 217, 70, 239), 0.22), 0 0 28px rgba(var(--footer-accent-rgb, 217, 70, 239), 0.12);
        transform: scale(1.02);
    }
    .footer-link-hover:hover { color: var(--footer-accent) !important; }
    .footer-icon-link:hover { opacity: 0.8; }
    .footer-icon-link:hover img { filter: none; }
  }
{%- endstyle -%}

