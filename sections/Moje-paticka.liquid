  document.addEventListener('changeMistColor', function(e) {
    var color = (e.detail && e.detail.color) ? e.detail.color : 'purple';
    applyFooterAccent(color);
  });
})();
</script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    var card = document.getElementById("card-{{ section.id }}");
    var container = document.getElementById("scene-{{ section.id }}");
    if (!card || !container) return;

    var isDesktop = function() { return window.innerWidth >= 750; };
    var MOBILE_TILT_SCALE = 0.4;
    var MOBILE_TILT_MAX = 12;

    function clamp(v, min, max) { return Math.min(max, Math.max(min, v)); }
    function resetCard() {
        card.classList.add("is-resetting");
        card.style.transform = "rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)";
    }

    // --- Desktop: tilt podle myši ---
    function setupDesktopTilt() {
        container.addEventListener("mousemove", onMouseMove);
        container.addEventListener("mouseleave", onMouseLeave);
    }
    function onMouseMove(e) {
        var rect = card.getBoundingClientRect();
        var x = e.clientX - rect.left;
        var y = e.clientY - rect.top;
        card.style.setProperty("--mouse-x", x + "px");
        card.style.setProperty("--mouse-y", y + "px");
        var centerX = rect.width / 2, centerY = rect.height / 2;
        var rotateX = ((y - centerY) / 15) * -1;
        var rotateY = (x - centerX) / 15;
        card.classList.remove("is-resetting");
        card.style.transform = "rotateX(" + rotateX + "deg) rotateY(" + rotateY + "deg) scale3d(1.02, 1.02, 1.02)";
    }
    function onMouseLeave() { resetCard(); }

    // --- Mobil: tilt podle orientace zařízení, jen když je karta ve viewportu ---
    var orientationListener = null;
    var cardInView = false;

    var CARD_W = 320, CARD_H = 450;
    var GLOW_POS_FACTOR = 2;

    function onOrientation(e) {
        if (!cardInView || !card) return;
        var beta = e.beta != null ? e.beta : 0;
        var gamma = e.gamma != null ? e.gamma : 0;
        var rotateX = clamp((beta - 45) * MOBILE_TILT_SCALE, -MOBILE_TILT_MAX, MOBILE_TILT_MAX);
        var rotateY = clamp(gamma * MOBILE_TILT_SCALE, -MOBILE_TILT_MAX, MOBILE_TILT_MAX);
        card.classList.remove("is-resetting");
        card.style.transform = "rotateX(" + rotateX + "deg) rotateY(" + rotateY + "deg) scale3d(1, 1, 1)";
        var glowX = clamp(CARD_W / 2 + gamma * GLOW_POS_FACTOR, 0, CARD_W);
        var glowY = clamp(CARD_H / 2 + (beta - 45) * GLOW_POS_FACTOR, 0, CARD_H);
        card.style.setProperty("--mouse-x", glowX + "px");
        card.style.setProperty("--mouse-y", glowY + "px");
    }

    function startOrientation() {
        if (orientationListener) return;
        orientationListener = onOrientation;
        card.style.setProperty("--mouse-x", CARD_W / 2 + "px");
        card.style.setProperty("--mouse-y", CARD_H / 2 + "px");
        if (typeof DeviceOrientationEvent !== "undefined" && typeof DeviceOrientationEvent.requestPermission === "function") {
            DeviceOrientationEvent.requestPermission().then(function(ok) {
                if (ok === "granted") window.addEventListener("deviceorientation", orientationListener);
            }).catch(function() {});
        } else {
            window.addEventListener("deviceorientation", orientationListener);
        }
    }

    function stopOrientation() {
        if (!orientationListener) return;
        window.removeEventListener("deviceorientation", orientationListener);
        orientationListener = null;
        if (!isDesktop()) card.classList.remove("card-glow-visible");
        resetCard();
    }

    var observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
            cardInView = entry.isIntersecting;
            if (!isDesktop()) {
                if (cardInView) {
                    card.classList.add("card-glow-visible");
                    startOrientation();
                } else {
                    card.classList.remove("card-glow-visible");
                    stopOrientation();
                }
            }
        });
    }, { root: null, rootMargin: "0px", threshold: 0.2 });

    observer.observe(card);

    if (isDesktop()) {
        setupDesktopTilt();
    }
});
</script>

