    document.addEventListener("DOMContentLoaded", function() {

        let currentStage = 0; 

        let isTransitioning = false;

        

        const appRoot = document.getElementById('app-root-{{ section.id }}');

        const bg1 = document.getElementById('bg-1');

        const bg2 = document.getElementById('bg-2');

        const bg3 = document.getElementById('bg-3');

        const videoContainer = document.getElementById('video-container');

        const introWrapper = document.getElementById('intro-video-wrapper');

        const videoTerraContent = document.getElementById('video-content-terra');

        const terraStatus = document.getElementById('terra-status');

        const terraProgress = document.getElementById('terra-progress');

        const customVideoWrapper = document.getElementById('custom-video-wrapper');

        const uiContainer = document.getElementById('ui-container');

        const cards = [null, document.getElementById('card-1'), document.getElementById('card-2'), document.getElementById('card-3')];

        

        // --- ELEMENTY PRO LINKY ---

        const topCyberLine = document.querySelector('#cyber-overlay-top .cyber-line');

        const bottomCyberLine = document.querySelector('#cyber-overlay-bottom .cyber-line');



        // Zde schválně zobrazíme "Loading" screen, aby sekce nebyla prázdná

        const videoContentMain = document.getElementById('video-content-main');

        if(videoContentMain) videoContentMain.classList.remove('hidden');



        // === HOVER EFFEKTY (pouze od 1024px) ===

        cards.forEach((card, index) => {

            if(!card) return;

            const stageId = index;

            card.addEventListener('mouseenter', () => {

                if (window.innerWidth <= 1023) return;

                if (!isTransitioning && currentStage !== stageId) {

                    card.classList.add('card-hover-highlight');

                    if(cards[currentStage]) cards[currentStage].classList.add('card-dimmed');

                }

            });

            card.addEventListener('mouseleave', () => {

                if (window.innerWidth <= 1023) return;

                card.classList.remove('card-hover-highlight');

                if(cards[currentStage]) cards[currentStage].classList.remove('card-dimmed');

            });

        });



        // === KARUSEL (mobil): tap vs swipe, aktivace pouze na tap ===

        let touchStartX = 0;

        let touchSwipeDetected = false;

        const carouselEl = document.getElementById('cosmic-cards-carousel');



        cards.forEach((card, index) => {

            if(!card) return;

            const stageId = index;

            card.addEventListener('touchstart', (e) => {

                touchStartX = e.touches[0].clientX;

                touchSwipeDetected = false;

            }, { passive: true });

            card.addEventListener('touchmove', (e) => {

                if (Math.abs(e.touches[0].clientX - touchStartX) > 20) touchSwipeDetected = true;

            }, { passive: true });

            card.addEventListener('click', (e) => {

                if (window.innerWidth <= 1023 && touchSwipeDetected) {

                    e.preventDefault();

                    e.stopPropagation();

                    return;

                }

                requestTransition(stageId);

            });

        });



        // === KARUSEL: přejít na kartu (mobil) ===

        function scrollCarouselToCard(cardIndex, behavior) {

            if (window.innerWidth > 1023 || !carouselEl) return;

            const card = cards[cardIndex];

            if (!card) return;

            const cardLeft = card.offsetLeft;

            const cardWidth = card.offsetWidth;

            const containerWidth = carouselEl.offsetWidth;

            carouselEl.scrollTo({ left: cardLeft - (containerWidth - cardWidth) / 2, behavior: behavior || 'smooth' });

        }



        // === PULSUJÍCÍ ŠIPKY: která karta je uprostřed, viditelnost šipek, klik = jen scroll ===

        let carouselViewIndex = 2;

        const arrowLeft = document.getElementById('carousel-arrow-left-{{ section.id }}');

        const arrowRight = document.getElementById('carousel-arrow-right-{{ section.id }}');

        const carouselArrowsWrap = document.getElementById('carousel-arrows-wrap-{{ section.id }}');



        function getCarouselCenteredCardIndex() {

            if (!carouselEl || window.innerWidth > 1023) return 2;

            const scrollCenter = carouselEl.scrollLeft + carouselEl.offsetWidth / 2;

            let best = 2, bestDist = Infinity;

            [1, 2, 3].forEach(i => {

                const card = cards[i];

                if (!card) return;

                const cardCenter = card.offsetLeft + card.offsetWidth / 2;

                const dist = Math.abs(scrollCenter - cardCenter);

                if (dist < bestDist) { bestDist = dist; best = i; }

            });

            return best;

        }



        const ARROW_THEMES = { 1: 'lava', 2: 'crystal', 3: 'city' };

        const ARROW_SIZE = 48;

        const ARROW_GAP = 12;

        function updateCarouselArrowsVisibility() {

            if (window.innerWidth > 1023) return;

            carouselViewIndex = getCarouselCenteredCardIndex();

            const activeTheme = ARROW_THEMES[carouselViewIndex];

            const centeredCard = cards[carouselViewIndex];

            const wrapRect = carouselArrowsWrap ? carouselArrowsWrap.getBoundingClientRect() : null;

            const cardRect = centeredCard ? centeredCard.getBoundingClientRect() : null;

            if (arrowLeft) {

                if (carouselViewIndex > 1) {

                    arrowLeft.classList.add('carousel-arrow-visible');

                    arrowLeft.classList.remove('arrow-theme-lava', 'arrow-theme-crystal', 'arrow-theme-city');

                    arrowLeft.classList.add('arrow-theme-' + activeTheme);

                    if (wrapRect && cardRect) {

                        const cardCenterY = cardRect.top + cardRect.height / 2;

                        const leftPos = cardRect.left - wrapRect.left - ARROW_SIZE - ARROW_GAP;

                        const topPos = cardCenterY - wrapRect.top - ARROW_SIZE / 2;

                        arrowLeft.style.left = Math.max(8, leftPos) + 'px';

                        arrowLeft.style.right = 'auto';

                        arrowLeft.style.top = topPos + 'px';

                        arrowLeft.style.transform = 'translateY(0)';

                    }

                } else {

                    arrowLeft.classList.remove('carousel-arrow-visible');

                }

            }

            if (arrowRight) {

                if (carouselViewIndex < 3) {

                    arrowRight.classList.add('carousel-arrow-visible');

                    arrowRight.classList.remove('arrow-theme-lava', 'arrow-theme-crystal', 'arrow-theme-city');

                    arrowRight.classList.add('arrow-theme-' + activeTheme);

                    if (wrapRect && cardRect) {

                        const cardCenterY = cardRect.top + cardRect.height / 2;

                        const leftPos = cardRect.right - wrapRect.left + ARROW_GAP;

                        const topPos = cardCenterY - wrapRect.top - ARROW_SIZE / 2;

                        arrowRight.style.left = leftPos + 'px';

                        arrowRight.style.right = 'auto';

                        arrowRight.style.top = topPos + 'px';

                        arrowRight.style.transform = 'translateY(0)';

                    }

                } else {

                    arrowRight.classList.remove('carousel-arrow-visible');

                }

            }

            updateCardButtonsContent();

        }



        function updateCardButtonsContent() {

            if (window.innerWidth > 1023) {

                cards.forEach((card) => {

                    if (!card) return;

                    const overlay = card.querySelector('.teraformace-overlay-btn');

                    if (overlay) overlay.classList.remove('visible');

                });

                return;

            }

            cards.forEach((card, idx) => {

                if (!card) return;

                const overlay = card.querySelector('.teraformace-overlay-btn');

                if (!overlay) return;

                if (carouselViewIndex === idx && currentStage !== idx) {

                    overlay.classList.add('visible');

                } else {

                    overlay.classList.remove('visible');

                }

            });

        }



        if (carouselEl) {

            carouselEl.addEventListener('scroll', () => { updateCarouselArrowsVisibility(); }, { passive: true });

        }

        if (arrowLeft) {

            arrowLeft.addEventListener('click', () => {

                if (window.innerWidth > 1023) return;

                if (carouselViewIndex > 1) scrollCarouselToCard(carouselViewIndex - 1, 'smooth');

            });

        }

        if (arrowRight) {

            arrowRight.addEventListener('click', () => {

                if (window.innerWidth > 1023) return;

                if (carouselViewIndex < 3) scrollCarouselToCard(carouselViewIndex + 1, 'smooth');

            });

        }



        setTimeout(updateCarouselArrowsVisibility, 100);

        window.addEventListener('resize', updateCarouselArrowsVisibility);



        // === EVENT LISTENER PRO SPUŠTĚNÍ ===

        document.addEventListener('triggerCosmicIntro', function() {

            // Jakmile přijde signál, skryjeme loading screen a spustíme video

            if(videoContentMain) videoContentMain.classList.add('hidden');

            playMainIntro();

        });



        function playMainIntro() {

            isTransitioning = true;

            if (videoContainer) videoContainer.classList.add('video-active');

            

            const introVideo = introWrapper ? introWrapper.querySelector('video') : null;



            if (introWrapper && introVideo) {

                introWrapper.classList.remove('hidden');

                introVideo.currentTime = 0;

                introVideo.play().catch(e => finishIntroSetup());

                introVideo.onended = () => {

                    introWrapper.classList.add('hidden');

                    finishIntroSetup();

                };

            } else {

                finishIntroSetup();

            }

        }



