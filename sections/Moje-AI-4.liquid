{%- style -%}
  /* --- ZÁKLADNÍ KONTEJNER --- */
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: #ffffff;
    font-family: 'Inter', sans-serif;
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
  }

  /* POZADÍ - Fix pro prázdné divy */
  #stars-pricing-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    display: block !important;
  }

  .star-static {
    position: absolute;
    background: white;
    border-radius: 50%;
    opacity: 0.6;
  }

  /* LAYOUT */
  .pricing-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 2;
  }

  /* NADPISY */
  .pricing-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  #shopify-section-{{ section.id }} h2 {
    font-family: 'Orbitron', sans-serif !important;
    font-size: 2.5rem !important;
    font-weight: bold;
    color: white;
    margin-bottom: 1rem;
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} h2 { font-size: 3.5rem !important; }
  }

  .pricing-subtitle {
    color: #9ca3af;
    max-width: 600px;
    margin: 0 auto;
  }

  /* GRID */
  .pricing-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
    align-items: center; /* Důležité pro zarovnání karet */
  }
  @media(min-width: 1024px) {
    .pricing-grid { grid-template-columns: repeat(3, 1fr); }
  }

  /* KARTY */
  .pricing-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 1rem;
    transition: transform 0.3s;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .pricing-card:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  /* MODIFIKÁTOR PRO POPULÁRNÍ KARTU */
  .pricing-card.popular {
    border: 2px solid {{ section.settings.accent_color }};
    box-shadow: 0 0 30px {{ section.settings.accent_color }}33; /* 33 = 20% opacity hex */
    transform: scale(1.0);
    position: relative;
    background: rgba(20, 20, 35, 0.6);
  }

  @media(min-width: 1024px) {
    .pricing-card.popular { transform: scale(1.08); z-index: 10; }
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: {{ section.settings.accent_color }};
    color: white;
    padding: 4px 12px;
    border-radius: 99px;
    font-size: 0.75rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    white-space: nowrap;
  }

  /* OBSAH KARTY */
  .plan-name {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.25rem;
    font-weight: bold;
    color: #d1d5db;
    margin-bottom: 0.5rem;
  }
  .pricing-card.popular .plan-name { color: white; }

  .plan-price {
    font-size: 2.25rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: white;
  }
  .pricing-card.popular .plan-price {
    background: linear-gradient(to right, {{ section.settings.accent_color }}, #06b6d4);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .plan-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    flex-grow: 1; /* Aby tlačítka byla dole zarovnaná */
  }

  .feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 0.75rem;
    color: #9ca3af;
    font-size: 0.9rem;
  }
  .pricing-card.popular .feature-item { color: #d1d5db; }

  .material-symbols-outlined {
    font-family: 'Material Symbols Outlined' !important;
    font-size: 20px !important;
    margin-right: 0.5rem;
    display: inline-block;
  }
  
  .icon-check { color: #6b7280; } /* Gray */
  .pricing-card.popular .icon-check { color: #22d3ee; } /* Cyan */

  /* TLAČÍTKA */
  .btn-plan {
    width: 100%;
    padding: 1rem;
    border-radius: 0.5rem;
    text-align: center;
    font-weight: bold;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s;
    display: block;
  }

  .btn-standard {
    border: 1px solid rgba(255,255,255,0.2);
    color: white;
    background: transparent;
  }
  .btn-standard:hover { background: rgba(255,255,255,0.1); }

  .btn-popular {
    background: linear-gradient(to right, {{ section.settings.accent_color }}, #06b6d4);
    color: white;
    border: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.3);
  }
  .btn-popular:hover { transform: translateY(-2px); opacity: 0.9; }

{%- endstyle -%}

<div id="wrapper-{{ section.id }}" style="position: relative;">
  
  <!-- Pozadí (Generováno JS) -->
  <div id="stars-pricing-{{ section.id }}"></div>

  <div class="pricing-container">
    <div class="pricing-header">
      <h2>{{ section.settings.title }}</h2>
      <p class="pricing-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="pricing-grid">
      {%- for block in section.blocks -%}
        <div class="pricing-card {% if block.settings.is_popular %}popular{% endif %}">
          
          {%- if block.settings.is_popular -%}
            <div class="popular-badge">Nejoblíbenější</div>
          {%- endif -%}

          <h3 class="plan-name">{{ block.settings.title }}</h3>
          <div class="plan-price">{{ block.settings.price }}</div>
          
          <ul class="plan-features">
            {%- assign features_list = block.settings.features | newline_to_br | split: '<br />' -%}
            {%- for feature in features_list -%}
              <li class="feature-item">
                <span class="material-symbols-outlined icon-check">
                  {% if block.settings.is_popular %}done_all{% else %}done{% endif %}
                </span>
                {{ feature | strip }}
              </li>
            {%- endfor -%}
          </ul>

          <a href="{{ section.settings.contact_url }}" class="btn-plan {% if block.settings.is_popular %}btn-popular{% else %}btn-standard{% endif %}">
            {{ block.settings.btn_text }}
          </a>

        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

