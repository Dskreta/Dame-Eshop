<script>
  (function() {
    // Funkce pro generování jednoduchých hvězd v pozadí
    function initPricingStars(sectionId) {
      const containerId = 'stars-pricing-' + sectionId;
      const container = document.getElementById(containerId);

      if (!container) return;
      container.innerHTML = '';

      // Méně hvězd než v hero sekci, aby to nebylo rušivé
      for (let i = 0; i < 30; i++) {
        const star = document.createElement('div');
        star.className = 'star-static';
        
        const size = Math.random() * 2 + 1; // 1-3px
        star.style.width = size + 'px';
        star.style.height = size + 'px';
        star.style.left = Math.random() * 100 + '%';
        star.style.top = Math.random() * 100 + '%';
        star.style.opacity = Math.random() * 0.5 + 0.1; // Jemnější
        
        container.appendChild(star);
      }
    }

    // Inicializace
    document.addEventListener('DOMContentLoaded', function() {
      const containers = document.querySelectorAll('[id^="stars-pricing-"]');
      containers.forEach(function(container) {
        const id = container.id.replace('stars-pricing-', '');
        initPricingStars(id);
      });
    });

    // Editor re-load support
    document.addEventListener('shopify:section:load', function(event) {
      const container = event.target.querySelector('[id^="stars-pricing-"]');
      if (container) {
        initPricingStars(event.detail.sectionId);
      }
    });

  })();
</script>
        