        const rect = wrapper.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        // Aktualizace CSS proměnných pro masku
        wrapper.style.setProperty('--mx', x + 'px');
        wrapper.style.setProperty('--my', y + 'px');
      });

      wrapper.addEventListener('mouseleave', () => {
        // Schování masky mimo obrazovku
        wrapper.style.setProperty('--mx', '-9999px');
        wrapper.style.setProperty('--my', '-9999px');
