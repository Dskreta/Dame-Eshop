<!-- Načtení Three.js (s defer pro rychlost) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js" defer></script>

<div id="laser-wrapper-{{ section.id }}" class="laser-wrapper" style="height: {{ section.settings.height }}px; background-color: {{ section.settings.bg_color }};">
  
  <!-- 1. Vrstva: Laser Canvas (Vzadu) -->
  <div id="laser-mount-{{ section.id }}" class="laser-mount"></div>

  <!-- 2. Vrstva: Reveal Image (Vpředu - S maskou) -->
  {% if section.settings.reveal_image != blank %}
    <img 
      id="reveal-img-{{ section.id }}"
      class="reveal-img"
      src="{{ section.settings.reveal_image | image_url: width: 2000 }}"
      alt="Reveal"
      width="{{ section.settings.reveal_image.width }}"
      height="{{ section.settings.reveal_image.height }}"
      loading="lazy"
    >
  {% endif %}

  <!-- 3. Vrstva: BOX Rámeček (Kotveno uprostřed) -->
  <div class="laser-box-container">
    {% if section.settings.box_image != blank %}
      <img 
        class="box-img"
        src="{{ section.settings.box_image | image_url: width: 1600 }}" 
        alt="Box Content"
        width="{{ section.settings.box_image.width }}"
        height="{{ section.settings.box_image.height }}"
        loading="lazy"
      >
    {% else %}
      <div class="box-placeholder" style="color: {{ section.settings.box_border_color }};">
        Nahrát obrázek boxu
      </div>
    {% endif %}
  </div>

</div>

<style>
  .laser-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    /* Proměnné pro pozici myši, defaultně mimo obrazovku */
    --mx: -9999px;
    --my: -9999px;
  }

  /* Canvas vzadu */
  .laser-mount {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .laser-mount canvas {
    display: block;
    width: 100%;
    height: 100%;
  }

  /* Obrázek vpředu s maskou */
  .reveal-img {
    position: absolute;
    top: 0; /* Změna z -50% na 0 pro jednodušší pozicování */
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Aby obrázek pokryl celou plochu */
    z-index: 5;
    opacity: 0.3; /* Základní průhlednost */
    pointer-events: none; /* Aby myš propadla skrz */
    mix-blend-mode: lighten; /* Efekt prolnutí */
    
    /* Maska pro WebKit (Chrome, Safari) */
    -webkit-mask-image: radial-gradient(circle at var(--mx) var(--my), rgba(255,255,255,1) 0px, rgba(255,255,255,0.95) 60px, rgba(255,255,255,0.6) 120px, rgba(255,255,255,0.25) 180px, rgba(255,255,255,0) 240px);
    -webkit-mask-repeat: no-repeat;
    
    /* Standardní maska */
    mask-image: radial-gradient(circle at var(--mx) var(--my), rgba(255,255,255,1) 0px, rgba(255,255,255,0.95) 60px, rgba(255,255,255,0.6) 120px, rgba(255,255,255,0.25) 180px, rgba(255,255,255,0) 240px);
    mask-repeat: no-repeat;
  }

  /* Rámeček (Box) - LOGIKA KOTVENÍ K LASERU */
  .laser-box-container {
    position: absolute;
    
    /* 1. Kotva je přesně uprostřed (tam kde je laser) */
    top: 50%; 
    left: 50%;
    transform: translateX(-50%); /* Centrování pouze horizontálně */
    
    /* 2. Možnost manuálního doladění posunu */
    margin-top: {{ section.settings.box_top_offset }}px;

    /* 3. Rozměry */
    width: {{ section.settings.box_width }}%;
    height: {{ section.settings.box_height }}px; /* Jak roste výška, box jde dolů */
    
    /* Vzhled */
    border: 2px solid {{ section.settings.box_border_color }};
    border-bottom: none; /* Dole otevřené */
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    
    background-color: {{ section.settings.bg_color }};
    z-index: 10;
    overflow: hidden;
    
    /* Záře */
    box-shadow: 0 0 20px {{ section.settings.box_border_color }}60;
  }

  .box-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* ZAROVNÁNÍ OD HORNÍ HRANY */
    object-position: top center; 
    display: block;
  }

  .box-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
</style>

